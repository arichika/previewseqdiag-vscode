{
    "name": "previewseqdiag-vscode",
    "displayName": "Preview Sequence Diagrams",
    "description": "An extension for vscode specialized for the preview function of mermaid, mscgen and other.",
    "version": "0.0.1",
    "publisher": "arichika",
    "author": "arichika.taniguchi @arichika",
    "license": "GPL-3.0",

    "galleryBanner": {
        "color": "#f0f0f0",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arichika/previewseqdiag-vscode"
    },
    "homepage": "https://github.com/arichika/previewseqdiag-vscode",
    "bugs": {
        "url": "https://github.com/arichika/previewseqdiag-vscode/issues"
    },
    "categories": [
        "Formatters",
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "Mermaid",
        "Mmd",
        "MscGen",
        "MsGenny",
        "XÃ¹"
    ],

    "engines": {
        "vscode": "^1.12.0"
    },
    
    "activationEvents": [
        "onCommand:previewSeqDiag.showPreview",
        "onLanguage:mermaid",
        "onLanguage:mscgen",
        "onLanguage:msgenny",
        "onLanguage:xu"
    ],
    "main": "./out/src/extension",
    "configuration": {
        "type": "object",
        "title": "TypeScript configuration",
        "properties": {
            "previewSeqDiag.mermaid.fixedStyle": {
                "type": ["string", "null"],
                "default": null,
                "description": "Setting to force usage for Mermaid's rendering style. dark, forest, \"\" or null(=Switch according to the theme of VSCode) "
            },
            "previewSeqDiag.mermaid.fixedBackgroundColor": {
                "type": ["string", "null"],
                "default": null,
                "description": "Setting to force usage for Mermaid's rendering background color. #rrggbb, transparent or null(=Depends on VSCode's Theme) "
            },
            "previewSeqDiag.mscgen.fixedNamedStyle": {
                "type": ["string", "null"],
                "default": null,
                "description": "Setting to force usage for Mscgen's rendering style, MsGenny, xu's preview. lazy, classic, cygne, pegasse, fountainpen or null(=cygne)"
            }
        }
    },
    "contributes": {
        "languages": [{
            "id": "mermaid",
            "aliases": [
                "Mermaid"
            ],
            "extensions": [
                ".mmd",
                ".mermaid"
            ]
        }],        
        "commands": [{
            "command": "previewSeqDiag.showPreview",
            "title": "Preview",
            "category": "Preview Sequence Diagrams"
        }],
		"menus": {
			"editor/title": [
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == mermaid"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == mscgen"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == msgenny"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == xu"
                }
            ],
            "editor/context": [
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == mermaid"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == mscgen"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == msgenny"
                },
				{
					"command": "previewSeqDiag.showPreview",
                    "group":"navigation",
                    "when": "resourceLangId == xu"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "rx":"^4.1.0",
        "mermaid": "^7.0.0",
        "mscgenjs": "^1.12.1",
        "mscgenjs-inpage": "^1.12.1"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
    ,
    "extensionDependencies": [
        "mscgenjs.vscode-mscgen"
  ]
}

